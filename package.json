{
  "name": "wvvw.me",
  "description": "The code that powers https://wvvw.me",
  "author": "Alexis Tyler <xo@wvvw.me>",
  "private": true,
  "scripts": {
    "start": "npm-run-all --parallel caddy watchify",
    "caddy": "caddy",
    "watchify": "watchify -vd -p browserify-hmr -e src/main.js -o dist/build.js",
    "serve": "http-server -o -s -c 1 -a localhost",
    "dev": "npm-run-all --parallel watchify serve",
    "build": "cross-env NODE_ENV=production browserify -g envify src/main.js | uglifyjs -c warnings=false -m > dist/build.js",
    "test": "xo && cross-env NODE_ENV=test yarn coverage",
    "coverage": "nyc ava test/*.spec.js",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel": "^6.23.0",
    "babel-core": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babelify": "^7.2.0",
    "browser-env": "^2.0.30",
    "browserify": "^13.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.6",
    "envify": "^3.4.1",
    "fuse.js": "^2.6.1",
    "http-server": "^0.9.0",
    "marked": "^0.3.6",
    "npm-run-all": "^2.1.2",
    "require-extension-hooks": "^0.2.0",
    "require-extension-hooks-babel": "^0.1.0",
    "require-extension-hooks-vue": "^0.2.1",
    "uglify-js": "^2.5.0",
    "vue": "^2.3.2",
    "vue-events": "^2.0.0-beta",
    "vue-resource": "^1.0.3",
    "vue-router": "^2.1.1",
    "vue-stash": "^2.0.1-beta",
    "vueify": "^9.4.1",
    "snyk": "^1.30.0"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "bson": "^1.0.4",
    "nyc": "^10.3.0",
    "watchify": "^3.4.0",
    "xo": "^0.18.1"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "xo": {
    "space": 4,
    "rules": {
      "space-before-function-paren": [
        "error",
        "never"
      ]
    },
    "envs": [
      "node",
      "es6"
    ]
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "./test/helpers/setup.js"
    ]
  },
  "nyc": {
    "exclude": [
      "test",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__/**",
      "**/node_modules/**"
    ],
    "extension": [
      ".js",
      ".vue"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "ignore": "test.js",
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "snyk": true
}
